<!DOCTYPE html>

<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% trans_default_domain 'layout' %}
			{% block title %}{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
														           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/HeadernFooter.css') }}">
		<link rel="stylesheet" href="{{ asset('css/body.css') }}">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<nav class="menu">
			<ul>
				<li><a href="{{ path('inicio') }}">{{ 'layout.inicio'|trans }}</a></li>
				<li><a href="{{ path('sobreMi') }}">{{ 'layout.sobremi'|trans }}</a></li>
				<li><a href="{{ path('libros') }}">{{ 'layout.libros'|trans }}</a></li>
				<li><a href="{{ path('noticias') }}">{{ 'layout.noticias'|trans }}</a></li>
				<li><a href="{{ path('contacto') }}">{{ 'layout.contacto'|trans }}</a></li>
			</ul>
		</nav>
		<div class="icono">
			<div class="_layer -top"></div>
			<div class="_layer -mid"></div>
			<div class="_layer -bottom"></div>
		</div>
		{% block body %}{% endblock %}

		<script src="{{ asset('jquery/jquery.min.js') }}"></script>
		<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('jquery/menu.js') }}"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>

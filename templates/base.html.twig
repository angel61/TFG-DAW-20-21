<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% trans_default_domain 'layout' %}
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
				           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div>
			<a href="{{ path('inicio_locale') }}">{{ 'layout.inicio'|trans }}</a>
			<a href="{{ path('sobreMi_locale') }}">{{ 'layout.sobremi'|trans }}</a>
			<a href="{{ path('libros_locale') }}">{{ 'layout.libros'|trans }}</a>
			<a href="{{ path('noticias_locale') }}">{{ 'layout.noticias'|trans }}</a>
			<a href="{{ path('contacto_locale') }}">{{ 'layout.contacto'|trans }}</a>
		</div>
		{% block body %}{% endblock %}

		<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
